<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Intro_Activity"
    android:background="@color/color_bg">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp"
        android:layout_width="260dp"
        android:layout_height="260dp" />


    <Button
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="#1ca785"
        android:text="Connect"
        android:textSize="24dp"
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_txt"
        android:textAlignment="center"
        android:text="Tap to Connect Your Device"
        android:id="@+id/startScreenInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:src="@drawable/device_offline"
        android:layout_alignBottom="@+id/logo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="81dp"
        android:layout_height="20dp"
        android:id="@+id/settings_icon"
        android:src="@drawable/settings_logo"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_connect"
        android:layout_alignEnd="@+id/btn_connect" />

</RelativeLayout>
